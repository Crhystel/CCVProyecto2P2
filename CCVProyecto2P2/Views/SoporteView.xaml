<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CCVProyecto2P2.Views.SoporteView"
             Background="#e6e2dc">
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" >
            <Label Text="Nuestras redes:"
               FontSize="18"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,0,0,20" 
               TextColor ="Black"
               FontFamily="TheStudentsTeacherFont"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="20">

                <Image Source="whatsapp.png" WidthRequest="50" HeightRequest="50">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnWhatsAppTapped" />
                    </Image.GestureRecognizers>
                </Image>


                <Image Source="instagram.png" WidthRequest="50" HeightRequest="50">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnInstagramTapped" />
                    </Image.GestureRecognizers>
                </Image>

            </StackLayout>
        </StackLayout>
</ContentPage>